{
  "version": 2,

  "buildCommand": "npm run build",
  "outputDirectory": "dist/third-party-contracts-portal",

  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
